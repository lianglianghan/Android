<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/memo_bg_02_1"
    android:descendantFocusability="blocksDescendants" >

    <ImageButton
        android:id="@+id/list_modify"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="#00ffffff"
        android:focusable="false"
        android:src="@drawable/memo_button_edit" />

    <TextView
        android:id="@+id/list_date"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/list_modify"
        android:gravity="center_vertical"
        android:text="日期"
        android:textColor="#af000000" />

    <TextView
        android:id="@+id/list_time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical"
        android:text="08:00pm"
        android:textColor="#af000000" />

    <ImageButton
        android:id="@+id/list_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:background="#00ffffff"
        android:focusable="false"
        android:src="@drawable/memo_button_close" />

    <TextView
        android:id="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_date"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="标题"
        android:textColor="#af000000"
        android:textSize="20sp" >
    </TextView>

     <TextView
        android:id="@+id/list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:text="内容"
        android:textColor="#af000000"
        android:textSize="20sp"
        android:visibility="gone" >
    </TextView>

</RelativeLayout>